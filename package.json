{
    "name": "cindro-x-framework",
    "main": "index.ts",
    "type": "module",
    "scripts": {
        "cindrox": "bun src/cli.ts",
        "tree": "tree -I \"node_module*|*data*|coverage|coverage-html|logs\"",
        "lint": "bun biome check",
        "lint:fix": "bun biome check --write",
        "test": "bun test",
        "dev": "bun --watch run src/server/index.ts",
        "migrate:generate": "bun ./src/db/scripts/migrations_generate.ts",
        "migrate": "bun ./src/db/scripts/migrations_migrate.ts",
        "migrate:rollback": "bun ./src/db/scripts/migrations_rollback.ts",
        "migrate:status": "bun ./src/db/scripts/migrations_status.ts",
        "docker": "docker compose --project-name cindro-x --env-file .env -f docker/docker-compose.yml",
        "docker:start": "bun run docker up -d",
        "docker:stop": "bun run docker down",
        "test:docker": "docker run --rm -it --env-file .env -v $(pwd):/app -w /app imbios/bun-node:1.1.18-18.20.2-alpine bun test --coverage --reporter=lcov"
    },
    "dependencies": {
        "@inquirer/prompts": "^7.3.2",
        "@keyvhq/core": "^2.1.1",
        "@keyvhq/redis": "^2.1.5",
        "@types/express": "^5.0.0",
        "argon2": "^0.41.1",
        "chalk": "^5.4.1",
        "commander": "^13.1.0",
        "drizzle-orm": "^0.39.3",
        "drizzle-zod": "^0.7.0",
        "emittery": "^1.1.0",
        "hono": "^4.7.1",
        "jsonwebtoken": "^9.0.2",
        "mysql2": "^3.12.0",
        "node-plop": "^0.32.0",
        "ora": "^8.2.0",
        "passport": "^0.7.0",
        "passport-jwt": "^4.0.1",
        "passport-local": "^1.0.0",
        "pino": "^9.6.0",
        "reflect-metadata": "^0.2.2",
        "tsyringe": "^4.8.0",
        "typescript": "^5.0.0",
        "zod": "^3.24.2"
    },
    "devDependencies": {
        "@biomejs/biome": "1.9.4",
        "@commitlint/cli": "^19.7.1",
        "@commitlint/config-conventional": "^19.7.1",
        "@faker-js/faker": "^9.5.0",
        "@types/bun": "latest",
        "@types/passport": "^1.0.17",
        "@types/passport-jwt": "^4.0.1",
        "@types/passport-local": "^1.0.38",
        "drizzle-kit": "^0.30.4",
        "lefthook": "^1.10.10",
        "pino-pretty": "^13.0.0"
    },
    "engines": {
        "bun": ">=1.0.0"
    },
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/angelxmoreno/CindroX.git"
    },
    "bugs": {
        "url": "https://github.com/angelxmoreno/CindroX/issues"
    },
