{
    "name": "cindro-x-framework",
    "main": "index.ts",
    "type": "module",
    "scripts": {
        "lint": "bun biome check",
        "lint:fix": "bun biome check --write",
        "test": "bun test",
        "dev": "bun --watch run src/server/index.ts",
        "migrations:generate": "bunx drizzle-kit generate --dialect mysql --schema ./src/db/schema --out ./src/db/migrations",
        "docker": "docker compose --project-name cindro-x --env-file .env -f docker/docker-compose.yml",
        "docker:start": "bun run docker up -d",
        "docker:stop": "bun run docker down",
        "test:docker": "docker run --rm -it --env-file .env -v $(pwd):/app -w /app imbios/bun-node:1.1.18-18.20.2-alpine bun test --coverage --reporter=lcov"
    },
    "dependencies": {
        "@keyvhq/core": "^2.1.1",
        "@keyvhq/redis": "^2.1.5",
        "drizzle-orm": "^0.39.3",
        "emittery": "^1.1.0",
        "hono": "^4.7.1",
        "mysql2": "^3.12.0",
        "pino": "^9.6.0",
        "reflect-metadata": "^0.2.2",
        "tsyringe": "^4.8.0",
        "typescript": "^5.0.0"
    },
    "devDependencies": {
        "@biomejs/biome": "1.9.4",
        "@commitlint/cli": "^19.7.1",
        "@commitlint/config-conventional": "^19.7.1",
        "@types/bun": "latest",
        "drizzle-kit": "^0.30.4",
        "lefthook": "^1.10.10",
        "pino-pretty": "^13.0.0"
    },
    "engines": {
        "bun": ">=1.0.0"
    },
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/angelxmoreno/CindroX.git"
    },
    "bugs": {
        "url": "https://github.com/angelxmoreno/CindroX/issues"
    },
    "homepage": "https://github.com/angelxmoreno/CindroX",
    "maintainers": [
        {
            "name": "Angel X Moreno",
            "email": "angel@moreno.dev"
        }
    ],
    "contributors": [
        {
            "name": "Angel X Moreno",
            "email": "angel@moreno.dev"
        }
    ]
}
